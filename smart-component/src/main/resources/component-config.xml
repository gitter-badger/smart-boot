<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byName">

	<!-- 配置缓存拦截器 -->
	<bean id="cacheInterceptor" class="net.vinote.smartboot.component.cache.CacheInterceptor">
		<property name="cacheClient" ref="cacheClient" />
	</bean>
	<bean
		class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<property name="interceptorNames">
			<list>
				<value>cacheInterceptor</value>
			</list>
		</property>
		<property name="beanNames">
			<value>*Component</value>
		</property>
	</bean>
	<import resource="classpath*:dal-config.xml" />
	<import resource="classpath*:service-integration.xml" />
</beans>